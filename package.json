    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.4",
    "@types/marked": "^5.0.2",
    "marked": "^17.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.6",
